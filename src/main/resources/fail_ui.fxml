<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<DialogPane xmlns:fx="http://javafx.com/fxml/1" fx:id="errorDialog" xmlns="http://javafx.com/javafx/10.0.2-internal">
    <header>
        <Label text="An exception has occurred.">
            <font>
                <Font size="20.0"/>
            </font>
            <padding>
                <Insets left="5.0"/>
            </padding>
        </Label>
    </header>
    <content>
        <VBox>
            <Label text="Something went horribly, terribly wrong, causing Nxxt to crash. "/>
        </VBox>
    </content>
    <expandableContent>
        <VBox>
            <Label text="The following is the technical details of the exception."/>
            <Label/>
            <Label fx:id="exception" text="COULD_NOT_DISPLAY_EXCEPTION_FUCK"/>
            <Text fx:id="exception_st" text="COULD_NOT_DISPLAY_STACK_TRACE_FUCK_ME"/>
        </VBox>
    </expandableContent>
    <ButtonType fx:constant="CLOSE"/>
</DialogPane>
